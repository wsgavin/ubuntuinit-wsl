#!/bin/sh

#du
alias du='du -sh * | sort -hr'
alias du10='du -sh * | sort -hr | head -n 10'

# Get week number
alias week='date +%V'

# Stopwatch
alias timer='echo "Timer started. Stop with Ctrl-D." && date && time cat && date'

#IP
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip"hostname -I"

# IP scan of local network
alias nmapsub="nmap -sn 192.168.15.1/24"

# git
alias gl="git log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)-%an%C(reset)%C(bold yellow)%d%C(reset)'"

# npm update
alias npu="npm update --global"
